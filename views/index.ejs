<div id="chat">
  
      <style>
        #form { background: #000; width: 260px; margin: 2px;}
        form input { background: #dddddd; border: 0; padding: 10px; width: 260px;}
        #messages { list-style-type: none; margin: 0; padding: 0; height:604px ; overflow: auto;}
        #messages li { padding: 5px 10px; text-align:left ;}
        #messages li:nth-child(odd) { background: #eee; }
      </style>
    </head>
    <body>
      <ul id="messages"></ul>
      <form action="" id="form">
        <input id="m" autocomplete="off" value=""/>
      </form>
      <script src="/socket.io/socket.io.js"></script>
      <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
      <script>
        var playername='<%= name %>';
          $(function () {
            var socket = io();
            $('form').submit(function(e){
              e.preventDefault(); // prevents page reloading
              socket.emit('chat message', '<%= name %>: '+$('#m').val());
              $('#m').val('');
              return false;
            });
            socket.on('chat message', function(msg){
              $('#messages').append($('<li>').text(msg));
            });
          });
        </script>
    </body>
