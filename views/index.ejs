<style>
#chat{
float: left;
height: 640px;
width: 260px;
}
#game{ width: 640px;
height: 640px;
float: left;
border-right: 1px solid black;
}
body { margin: 0px;
}
#form { background: #000; 
width: 260px; 
margin: 0px;
}
form input { background: #dddddd; 
border: 0; 
padding: 10px; 
width: 260px;
}
#messages { list-style-type: none; 
margin: 0; 
padding: 0; 
height:604px ; 
overflow: auto;
}
#messages li { padding: 5px 10px; 
text-align:left ;
}
#messages li:nth-child(odd) { background: #eee; 
}
#players {list-style-type: none; 
margin: 0; 
padding: 0; 
}
canvas {width: 640px;
height: 640px;
}
#content {width: 100%; 
text-align: center;
}
#wrapper {display: inline-block; 
margin-top:10px; 
border: 1px solid black;
}
</style>
<body>
<div id="content">
<div id="wrapper">
<div id="game">
        <script src="/socket.io/socket.io.js"></script>
        <canvas id="canvas"></canvas>
        <script src="../static/game.js"></script>
</div>
<div id="chat">
    </head>
      <ul id="messages"></ul>
      <form action="" id="form">
        <input id="m" autocomplete="off" value=""/>
      </form>
      <script src="/socket.io/socket.io.js"></script>
      <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
      <script>
        var playername='<%= name %>';
          $(function () {
            var socket = io();
            $('form').submit(function(e){
              e.preventDefault(); // prevents page reloading
              socket.emit('chat message', '<%= name %>: '+$('#m').val());
              $('#m').val('');
              return false;
            });
            socket.on('chat message', function(msg){
              $('#messages').append($('<li>').text(msg));
            });
          });
        </script>
  </div>
</div>
</div>
</body>