<h1>Lobby</h1>
<div><h1>Hi <%= name %></h1>
      </head>
      <body>
        <ul id="messages"></ul>
        <form action="">
          <input id="m" autocomplete="off" value=""/><button>Send</button>
        </form>
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
          var playername='<%= name %>';
            $(function () {
              var socket = io();
              $('form').submit(function(e){
                e.preventDefault(); // prevents page reloading
                socket.emit('chat message', '<%= name %>: '+$('#m').val());
                $('#m').val('');
                return false;
              });
              socket.on('chat message', function(msg){
                $('#messages').append($('<li>').text(msg));
              });
            });
          </script>
      </body>
    </div>
    <div id='yolo'>
        <head>
            <title>Lobby</title>
            <script src="/socket.io/socket.io.js"></script>
        </head>
        <body>
            <button id="startButton" type="button" onclick="window.open('index')">Start</button>
            <br>
            <button id="joinButton" type="button" onclick="joinedLobby()">Join</button>
            <br>
            <ul id="players"></ul>
        </body>
        <script src="../static/game.js"></script>
        <script src="/socket.io/socket.io.js"></script>
        <script src="https://code.jquery.com/jquery-1.11.1.js"></script>
        <script>
          var playername='<%= name %>';

          function joinedLobby(){
            $(function () {
              var socket = io();
              socket.emit('playerLobby', '<%= name %>');
              socket.on('playerLobby', function(playername){
                $('#players').append($('<li>').text(playername));
              });
            });
          }
        </script>
    </div>